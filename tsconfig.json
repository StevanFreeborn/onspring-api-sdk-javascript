{
  "compilerOptions": {
    "strictNullChecks": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "esModuleInterop": true,
    "target": "ES6",
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2015"
    },
    "moduleTypes": {
      "*.ts": "cjs"
    }
  }
}
